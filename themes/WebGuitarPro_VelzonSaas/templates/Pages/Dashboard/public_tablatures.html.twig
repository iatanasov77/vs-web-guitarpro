{% extends "base.html.twig" %}

{% block title %}{{ parent() }} :: {{ 'vs_wgp.template.public_tablatures' | trans( {},'WebGuitarPro' ) }}{% endblock %}
{% block pageTitle %}{#{{ 'vs_wgp.template.public_tablatures' | trans( {},'WebGuitarPro' ) }}#}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header align-items-center d-flex">
                    <h4 class="card-title mb-0 flex-grow-1">{{ 'vs_wgp.template.public_tablatures' | trans( {},'WebGuitarPro' ) }}</h4>
                </div><!-- end card header -->

                <div class="card-body">
                    {#
                    <p class="text-muted">Use <code>table-hover</code> class to enable a hover state on table rows within a &lt;tbody&gt;.</p>
                    #}
                    <div>
                        <div class="row">
                            <div class="col-xl-12">
                                <div class="table-responsive">
                                    <table class="table table-hover align-middle table-nowrap mb-0">
                                        <thead>
                                            <tr>
                                                <th>{{ 'vs_wgp.template.artist' | trans( {},'WebGuitarPro' ) }}</th>
                                                <th>{{ 'vs_wgp.template.song' | trans( {},'WebGuitarPro' ) }}</th>
                                                <th>{{ 'vs_wgp.template.owner' | trans( {},'WebGuitarPro' ) }}</th>
                                                <th>{{ 'vs_wgp.template.play' | trans( {},'WebGuitarPro' ) }}</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        {% for t in tabs %}
                                            <tr>
                                                <td>{{ t.artist }}</td>
                                                <td>{{ t.song }}</td>
                                                <td>{{ t.user.info.fullName }}</td>
                                                <td>
                                                    <a class="btn btn-primary mr-2"
                                                        href="{{ url( 'tablature_read', {id: t.id} ) }}"
                                                        title="{{ 'vs_application.template.items_index_row_action_download' | trans( {},'VSApplicationBundle' ) }}"
                                                    >
                                                        <i class="fas fa-download"></i>
                                                    </a>
                                                    
                                                    {% if ( t.slug|length ) %}{% set tabId = t.slug %}{% else %}{% set tabId = t.id %}{% endif %}
                                                    <a  class="btn btn-primary mr-2"
                                                        href="{{ path( 'vs_wgp_player_show', {id: tabId} ) }}"
                                                        title="{{ 'vs_wgp.template.button_play' | trans( {},'WebGuitarPro' ) }}"
                                                    >
                                                        <i class="fas fa-play"></i> {# Play #}
                                                    </a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            {% include 'Layout/pagination_container.html.twig' with {'items': tabs} %}
        </div>
    </div>
{% endblock %}

