{% extends "base.html.twig" %}

{% block title %}{{ parent() }} :: {{ 'vs_wgp.template.tablature_categories' | trans( {},'WebGuitarPro' ) }}{% endblock %}
{% block pageTitle %}{{ 'vs_wgp.template.tablature_categories' | trans( {},'WebGuitarPro' ) }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header align-items-center d-flex">
                    <h4 class="card-title mb-0 flex-grow-1">{{ 'vs_wgp.template.tablature_categories' | trans( {},'WebGuitarPro' ) }}</h4>
                </div><!-- end card header -->

                <div class="card-body">
                    {#
                    <p class="text-muted">Use <code>table-hover</code> class to enable a hover state on table rows within a &lt;tbody&gt;.</p>
                    #}
                    <div>
                        <div class="row">
                            <div class="col-xl-12">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>{{ 'vs_wgp.form.category' | trans( {},'WebGuitarPro' ) }}</th>
                                                <th>{{ 'vs_wgp.template.actions' | trans( {},'WebGuitarPro' ) }}</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        {% for t in items %}
                                            <tr>
                                                <td>{{ t.name }}</td>
                                                <td>
                                                    
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

