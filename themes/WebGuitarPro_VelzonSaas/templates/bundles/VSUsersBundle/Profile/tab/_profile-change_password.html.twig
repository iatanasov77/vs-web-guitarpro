{{ form_start(f) }}
    <div class="form-group mb-3">
        {{ form_label(f.oldPassword, null, {
            'label_attr': {'class': 'form-label'}
            }) 
        }}
        {{ form_widget(f.oldPassword, {'attr': {'class': 'form-control password-input' }}) }}
    </div>
    <div class="form-group mb-3">
        {{ form_label(f.password.first, null, {
            'label_attr': {'class': 'form-label'}
            }) 
        }}
        <div class="input-group">
            {{ form_widget(f.password.first, {'attr': {'class': 'form-control'}}) }}
            <div class="input-group-append">
                <button type="button" class="btn btn-primary" id="btnGeneratePassword">{{ 'vs_users.form.generate_password' | trans( {},'VSUsersBundle' ) }}</button>
            </div>
        </div>
    </div>
    <div class="form-group mb-3">
        {{ form_label(f.password.second, null, {
            'label_attr': {'class': 'col-form-label'}
            }) 
        }}
        {{ form_widget(f.password.second, {'attr': {'class': 'form-control' }}) }}
    </div>
    
    <div class="row">&nbsp;</div>
    <div class="input-group row">
        <div class="col-lg-12">
            <div class="text-end">
                <button type="submit" class="btn btn-primary">
                    {{ 'vs_users.form.profile.change_password.btn_change_password' | trans( {},'VSUsersBundle' ) }}
                </button>
            </div>
        </div>
    </div>
{{ form_end(f, {'render_rest': false}) }}