<header id="page-topbar">
    <div class="layout-width">
        <div class="navbar-header">
            <div class="d-flex">
            
                <!-- LOGO -->
                <div class="navbar-brand-box horizontal-logo">
                    <a href="{{ path( 'app_home' ) }}" class="logo logo-dark">
                        <span class="logo-sm">
                            <img src="{{ asset( 'build/web-guitar-pro-velzon-saas/images/guitarpro.png' ) }}"
                                alt="{{ applicationCompany }} {{ applicationTitle }}"
                                height="22"
                            >
                        </span>
                        <span class="logo-lg">
                            <img src="{{ asset( 'build/web-guitar-pro-velzon-saas/images/guitarpro.png' ) }}"
                                alt="{{ applicationCompany }} {{ applicationTitle }}"
                                height="17"
                            >
                        </span>
                    </a>

                    <a href="{{ path( 'app_home' ) }}" class="logo logo-light">
                        <span class="logo-sm">
                            <img src="{{ asset( 'build/web-guitar-pro-velzon-saas/images/guitarpro.png' ) }}"
                                alt="{{ applicationCompany }} {{ applicationTitle }}"
                                height="55"
                            >
                        </span>
                        <span class="logo-lg">
                            <img src="{{ asset( 'build/web-guitar-pro-velzon-saas/images/guitarpro.png' ) }}"
                                alt="{{ applicationCompany }} {{ applicationTitle }}"
                                height="50"
                            >
                        </span>
                    </a>
                </div>
                
                <div class="d-flex align-items-center" style="padding-top: 8px;">
                    <h1 style="color: white; font-size: 26px;">{{ applicationCompany }} {{ applicationTitle }}</h1>
                </div>

                <button type="button" class="btn btn-sm px-3 fs-16 header-item vertical-menu-btn topnav-hamburger" id="topnav-hamburger-icon">
                    <span class="hamburger-icon">
                        <span></span>
                        <span></span>
                        <span></span>
                    </span>
                </button>
                
                {% if hasTopSearch %}
                    {% include 'Layout/search_form.html.twig' %}
                {% endif %}
                
            </div>

            <div class="d-flex align-items-center">

                <div class="ms-1 header-item">
                    <a class="btn top-menu-button" href="{{ path( 'wgp_download_store_application' ) }}">
                        <span>{{ 'vs_wgp.template.menu.download_store_application' | trans( {},'WebGuitarPro' ) }}</span>
                    </a>
                </div>
                
                <div class="ms-1 header-item">
                    <a class="btn top-menu-button" href="{{ path( 'wgp_about_application' ) }}">
                        <span>{{ 'vs_wgp.template.menu.about_application' | trans( {},'WebGuitarPro' ) }}</span>
                    </a>
                </div>
                    
                <div class="ms-1 header-item">
                    <a class="btn top-menu-button" href="{{ path( 'vs_application_contact' ) }}">
                        <span>{{ 'vs_application.template.contact_page.visit_us' | trans( {},'VSApplicationBundle' ) }}</span>
                    </a>
                </div>
                
                <div class="dropdown ms-1 topbar-head-dropdown header-item">
                    {% set currentLang = ( app.request.locale | split( '_' ) )[1] | lower %}
                    {% set currentFlag = 'build/web-guitar-pro-velzon-saas/images/flags/' ~ currentLang ~ '.svg' %}
                    <button type="button" class="btn btn-icon btn-topbar btn-ghost-secondary rounded-circle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        {#
                        <i class="flag flag-{{ currentLang }} rounded" style="height: 12px; margin-left: 8px;"></i>
                        #}
                        <img src="{{ asset( currentFlag ) }}" alt="Header Language" height="20" class="rounded">
                    </button>
                    
                    {{ vs_widget_render( 'webguitarpro-layout', ['application-menu-locales'] ) }}
                </div>

                {% if app.user %}
                	{% include 'Layout/notifications.html.twig' %}
                	
                    <div class="dropdown ms-sm-3 header-item topbar-user">
                        <button type="button" class="btn" id="page-header-user-dropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="d-flex align-items-center">
    
                                {% if app.user.info and app.user.info.avatar %}
                                   <img src="{{ app.user.info.avatar.path|imagine_filter('users_crud_index_thumb') }}" alt="" class="rounded-circle header-profile-user" />
                                {% else %}
                                    {#
                                    <img src="{{ asset( 'build/web-guitar-pro-velzon-saas/images/users/avatar-1.jpg' ) }}" alt="" class="rounded-circle header-profile-user" />
                                    #}
                                    <img src="{{ asset( 'build/web-guitar-pro-velzon-saas/images/users/user-dummy-img.jpg' ) }}" alt="" class="rounded-circle header-profile-user" />
                                {% endif %}                            
    
                                <span class="text-start ms-xl-2">
                                    <span class="d-none d-xl-inline-block ms-1 fw-medium user-name-text">{{ app.user.info.fullName }}</span>
                                    <span class="d-none d-xl-block ms-1 fs-12 user-name-sub-text">{{ app.user.info.designation }}</span>
                                </span>
                                
                            </span>
                        </button>
                        <div class="dropdown-menu dropdown-menu-end profile-menu">
                            <!-- item-->
                            <h6 class="dropdown-header">{{ 'vs_wgp.template.menu.welcome' | trans( {},'WebGuitarPro' ) }} {{ app.user.info.fullName }}!</h6>
                            
                            {{ knp_menu_render('profile', {'template': '@VSApplication/Menu/profile.html.twig'}) }}
                        </div>
                    </div>
                {% endif %}
                    
            </div>
        </div>
    </div>
</header>

