{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "baseUrl": "./",
    "paths": {
        "tslib" : ["node_modules/tslib/tslib.d.ts"]
    },
    "types": [],
    "typeRoots": [
      "node_modules/@types"
    ],
   
    "allowJs": true,
    "module": "es2020",
    "moduleResolution": "node",
    "jsx": "preserve"
  },
  "angularCompilerOptions": {
      "strictTemplates": true,
      "preserveWhitespaces": true
  },
    
  "files": [
    "main.ts"
  ],
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
