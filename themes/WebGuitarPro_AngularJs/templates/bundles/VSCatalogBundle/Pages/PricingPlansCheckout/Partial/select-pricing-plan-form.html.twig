{{ form_start(form, {
    'action': path( 'vs_payment_handle_pricing_plan_form' ),
    'attr': {'class': 'modal__form', 'id': 'PricingPlanForm'}
}) }}
    <h4 class="modal__title">Select plan</h4>

    <div class="sign__group">
        {{ form_label(form.name, null, {
            'label_attr': {'class': 'sign__label'}
            }) 
        }}
        {{ form_widget( form.name, { 'attr': { 'class': 'sign__input' }, 'value' : app.user.info.fullName } ) }}
    </div>

    <div class="sign__group">
        {{ form_label(form.email, null, {
            'label_attr': {'class': 'sign__label'}
            }) 
        }}
        {{ form_widget( form.email, { 'attr': { 'class': 'sign__input' }, 'value' : app.user.email } ) }}
    </div>
    
    <div class="sign__group">
        {{ form_label(form.pricingPlan, null, {
            'label_attr': {'class': 'sign__label'}
            }) 
        }}
        {{ form_widget( form.pricingPlan, { 'attr': { 'class': 'sign__select' }, 'value' : pricingPlanId } ) }}
        
        <span class="sign__text">You can spend money from your account on the renewal of the connected packages, or to order cars on our website.</span>
    </div>

    {% include '@VSPayment/Pages/PaymentMethod/select-payment-method-field.html.twig' %}

    {{ form_widget(form.btnSubmit, {
        'attr': {'class': 'sign__btn sign__btn--modal sign__btn--text', 'id': 'SelectPricingPlanSubmit'},
        'id': 'SelectPricingPlanSubmit'
    }) }}

{{ form_end(form, {'render_rest': false}) }}