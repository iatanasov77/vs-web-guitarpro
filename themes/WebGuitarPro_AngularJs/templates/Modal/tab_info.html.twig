                    <h2 class="subTitle" style="text-align: center;"></h2>
                    
                    <div class="row"><div class="col-sm">&nbsp;</div></div>
                    
                    <div class="row">
                        <div class="col-sm-2" style="font-weight: bold;">{{ 'vs_wgp.template.modal_tab_info.album' | trans( {},'WebGuitarPro' ) }}:</div>
                        <div class="col-sm album"></div>
                    </div>
                    <div class="row">
                        <div class="col-sm-2" style="font-weight: bold;">{{ 'vs_wgp.template.modal_tab_info.copyright' | trans( {},'WebGuitarPro' ) }}:</div>
                        <div class="col-sm copyright"></div>
