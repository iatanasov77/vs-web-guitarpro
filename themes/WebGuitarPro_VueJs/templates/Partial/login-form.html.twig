<form action="{{ path( 'app_login' ) }}" method="post" class="px-4 py-3" id="formLogin" >
    <input type="hidden" name="_csrf_token" value="{{ csrf_token( 'authenticate' ) }}" />
    
    <div class="form-group">
        <label for="exampleDropdownFormEmail1">Email address</label>
        <input type="email" name="_username" class="form-control" id="exampleDropdownFormEmail1" placeholder="email@example.com">
    </div>
    <div class="form-group">
        <label for="exampleDropdownFormPassword1">Password</label>
        <input type="password" name="_password" class="form-control" id="exampleDropdownFormPassword1" placeholder="Password">
    </div>

    <div class="row ml-2">
        <div class="col-4"><a href="{{ path( 'wgp_user_registration_form' ) }}">Register</a></div>
        <div class="col-8"><a href="{{ path( 'wgp_user_forgot_password_form' ) }}">Forgot Password</a></div>
    </div>
    <div class="row">&nbsp;</div>
    
    <button type="submit" class="btn btn-primary">Login</button>
</form>