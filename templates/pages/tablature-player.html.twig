{% extends 'base.html.twig' %} 

{% block stylesheets %}
	{{ parent() }}
	
	{{ encore_entry_link_tags( 'tablature-player' ) }}
{% endblock %}   
           
{% block body %}
    <!-- Page Content  -->
    <div id="content">
        {% include 'partial/tablature-topbar.html.twig' %}
    
        <div class="row" style="margin-top: 110px">
            <!-- Sidebar  -->
            {% include 'partial/tablature-sidebar.html.twig' %}
        
            <div id="messages">
                {% if error %}
                    <div>{{ error.messageKey|trans( error.messageData, 'security' ) }}</div>
                {% endif %}
            </div>
        	<div id="tablatureWrapper">
                <div id="file-info"></div>
                
                <div id="alphaTab"
                    data-file="{{ path( 'tablature_read', {id: item.id} ) }}"
                    data-display-staveprofile="tab"
                    data-notation-rhythmmode="ShowWithBars"
                    data-player="/assets/AlphaTab/default.sf2"
                ></div>
        	</div>
        </div>                   
	</div>
{% endblock %}

{% block widgets %}
    <div class="progress widget-progress" id="soundFontProgressMenuItem">
        <div class="progress-bar" id="soundFontProgress" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
        	0%
        </div>
    </div>
{% endblock %}

{% block svg %}
	{% include 'partial/tablature-player-svg.html.twig' %}
{% endblock %}

{% block javascripts %}
	{{ parent() }}

    <!-- Including alphaTab -->
    <script type="text/javascript" src="/assets/AlphaTab/swfobject.js"></script>
    <script type="text/javascript" src="/assets/AlphaTab/AlphaTab_DEMO.js"></script>

	<script src="https://cdn.jsdelivr.net/npm/vue@2.6.10/dist/vue.js"></script>
	<script type="text/javascript" src="/assets/player-controls.js"></script>
	
	<script type="text/javascript" src="/assets/tablature-tracks.js"></script>
	
{% endblock %}
