{% extends 'base.html.twig' %} 

{% block body %}
    <!-- Page Content  -->
    <div id="content">
        {% include 'partial/tablature-topbar.html.twig' %}
    
        <div class="row" style="margin-top: 110px">
            <div id="messages">
                {% if error %}
                    <div>{{ error.messageKey|trans( error.messageData, 'security' ) }}</div>
                {% endif %}
            </div>
            <div id="listContainer">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Artist</th>
                            <th>Song</th>
                            <th>Play</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for t in tabs %}
                        <tr>
                            <td>{{ t.artist }}</td>
                            <td>{{ t.song }}</td>
                            <td><a href="{{ path( 'tablature_player', {id: 1} ) }}" class="btn btn-primary">Play</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>                   
    </div>
{% endblock %}
