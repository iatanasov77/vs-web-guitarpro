{
    "type": "project",
    "keywords": [
        "symfony",
        "vankosoft",
        "application",
        "guitar",
        "web guitar pro"
    ],
    "homepage": "http://vankosoft.org",
    "license": "MIT",
    "authors": [
        {
            "name": "Ivan I. Atanasov"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "guzzlehttp/promises": "*",
        "php-http/httplug": "*",
        
        "symfony/dotenv": "7.4.*",
        "symfony/flex": "^1.17|^2",
        "symfony/http-client": "7.4.*",
        "symfony/notifier": "7.4.*",
        "symfony/runtime": "7.4.*",
        
        "vankosoft/application": "1.14.*",
        "vankosoft/catalog-bundle": "^2.6",
        "vankosoft/api-bundle": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "symfony/browser-kit": "7.4.*",
        "symfony/css-selector": "7.4.*",
        "symfony/debug-bundle": "7.4.*",
        "symfony/maker-bundle": "^1.0",
        "symfony/phpunit-bridge": "7.4.*",
        "symfony/stopwatch": "7.4.*",
        "symfony/var-dumper": "7.4.*",
        "symfony/web-profiler-bundle": "7.4.*"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "symfony/flex": true,
            "oomphinc/composer-installers-extender": true,
            "symfony/runtime": true,
            "php-http/discovery": true
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%/admin-panel": "symfony-cmd",
            "liip:imagine:cache:remove": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.4.*"
        }
    }
}
